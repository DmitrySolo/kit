include ../dev/templates/PAGESYSTEM/INCLUDES/_includes
include ../dev/templates/mixins/_mixins
script
	include jquery-ui.min.js
.top-panel-content.clearfix
	.quant.hud Q
	.projecttitleCtn.f-left
		span.projectTitle= head.title
		include _currentPage
		span.projectPage=currentPage
	.buttonsSection.f-left.clearfix
		a(href='/'+currentPage target="_blank").tabAnchr#playhref
			.hud-Button.f-left
				+I('play','playButston')
		.viewportButton.f-left
			.hud-Button.f-left.viewportSwitch(data-viewport='mobile')
				+I('computer3')
			.hud-Button.f-left.viewportSwitch(data-viewport='tablet')
				+I('computer2')
			.hud-Button.f-left.viewportSwitch(data-viewport='tabletL')
				+I('computer1')
			.hud-Button.f-left.viewportSwitch(data-viewport='laptop')
				+I('computer')
			.hud-Button.f-left.viewportSwitch(data-viewport='desktop')
				+I('arrow')
		.hud-Button.f-left#debugViewSwitcher
			+I('allocation')
		.hud-Button.f-left#colorSystem
			+I('pantone')
		.hud-Button.f-left#gridb
			+I('grid')
		.hud-Button.f-left#editorSwitcher
			+I('html')
		.hud-Button.f-left#optionSwitcher
			+I('settings')
		.hud-Button.f-left#spacerSwitcher
			+I('compass')
		.hud-Button.f-left#rulerSwitcher
			+I('timeline')
		.hud-Button.f-left
			+I('four-layers')
		.hud-Button.f-left#testing
			+I('testing')
		.hud-Button.f-left#addContent
			+I('addContent','addContent')
		.hud-Button.f-left#savecode
			+I('savecode','savecode')
		.hud-Button.f-left#resizer
			input#scaller(type = "range" min = ".3" max = "2" step = ".1"  onchange = "qscale(this.value)",value='1')
			span#scallerLabel(style="line-height:0; color:#006eb7 !important") 1
		.contentbuttons.f-left.clearfix
			.hud-Button.f-left#openDownload
						+I('container')
	.apiTester.f-right
		span#apitest
