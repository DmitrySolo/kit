        .optionLine
            label Screen Font
            input(type='text' required=true name="screen_font" value='16px')
        .optionLine
            label Mobile Font
            input(type='text' required=true name="mobile_font" value='16px')
        .optionLine
            label Line height Ratio
            input(type='text' required=true name="lh_ratio" value='1.5')
