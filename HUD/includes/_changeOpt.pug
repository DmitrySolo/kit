                        option(value='Header' ) Header
                        option(value='Hero' ) Hero
                        option(value='Special_1' ) Special 1
                        option(value='Special_2' ) Special 2
                label Font weight
                    select(name="link_font__1_weight")
                        option(value='normal' selected= true) normal
                        option(value='100') 100
                        option(value='200') 200
                        option(value='300') 300
                        option(value='400') 400
                        option(value='500') 500
                        option(value='600') 600
                        option(value='700') 700
                        option(value='800') 800
                        option(value='900') 900
                label Font typeface
                    select(name="link_font__1_typeface")
                        option(value='Serif' selected= true) Serif
                        option(value='San-serif') San-serif
                        option(value='Monospace') Monospace
