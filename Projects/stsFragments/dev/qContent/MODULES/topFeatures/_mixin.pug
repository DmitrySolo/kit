mixin MODULE-topFeatures(modificier)
	<!-- split modules/topFeatures -->
	if(modificier)
		-var className ='topFeatures--'+modificier
	else
		-var className = ''
	.topFeatures__content(data-qcontent='module__topFeatures' class=''+className)
		span.topFeatures__element  
			+I('housePin')
			span.topFeatures__title Пункты выдачи в 170 городах.
		span.topFeatures__element
			+I('box','boxTop')
			span.topFeatures__title Оплачивайте заказы после проверки.