mixin MODULE-mainInfo()
	<!-- split modules/mainInfo -->
	.mainInfo__content(data-qcontent='module__mainInfo')
		.group.group--md.group--va-middle
			.col.col-3-tl.showFrom-tl  
				.mainInfo__logo
					a(href="/")
						h1
							img(src="source/images/sts-logo.svg")  
					
				//	+logo-img('logo1.svg') 
			.col.col-2-tl.showFrom-tl
				.mainInfo__block.mainInfo__geotarget
					+MODULE-geoTarget() 
			.col.col-12-tp.hideFrom-tl
				.mainInfo__cartLogin--mobile.group.group-el.clearfix
					a#js-user-city
						+I('placeholderm','mobile placeholderm')
					a#js-user-login
						+I('user','mobile user')  
					span.callMobile#js-user-call
							+I('call','mobile call')
					.f-right
						span.searchMobile.js_modal_trigger#js_modal_trigger__searchm
							+I('searchm','mobile mobileSearch')
						a
							+I('cart','mobile')
			.col.col-8-tl.hideFrom-tl
				.mainInfo__logo--mobile 
					IMG(src="source/images/sts-logo.svg")
			.col.col-5-tl.showFrom-tl
				+MODULE-topFeatures()
			.col.col-2-tl.showFrom-tl
					.mainInfo__phone
						span.mainInfo__phone-number
							|+7(473) 300-36-85
						span.mainInfo__phone-time.icon-clock1
							| Ежедневно  с 9 до 19ч
							//| ПН-ПТ 9 - 19ч