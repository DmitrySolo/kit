mixin I(id,classModifier)
	-if (!classModifier) classModifier =''
	svg(class='icon '+classModifier)
		use(xlink:href="#"+id)
mixin B-radialConturButton(value,className)
	-if (!className) className =''
	button.radialConturButton(class=''+className data-qcontent='elements__buttons__radialConturButton')=value


mixin LEVEL-orderPage(title,className)
	-if (!className) className =''
	section.orderPage__content(class = 'orderPage__content'+ className data-qcontent="level__orderPage")
		h2.orderPage__title=title
		p.orderPage__mainMessage.text
			-var link = "<a href='/'>N 123123</a>"
			-var link1 = "<a href='/'>личном кабинете</a>"
			-var link2 = "<a href='/'>Иванов Иван</a>"
			| Ваша заявка 
			|!{link}
			| принята на обработку.
		ul.orderPage__subMess
			li В настоящий момент заявка ожидает подтверждения менеджером.
			li Ваш ответственный менеджер !{link2} автоматически оповещен.
			li Отслеживать статус заявки вы можете в !{link1}.
			li Электронная копия заявки отправлена на указанный вами email.
			
		.orderPage__actions
			a(href='/') &larr; В личный Кабинет.
			br
			a(href='/') &larr; На главную.
		if block
			block
			
		