//- cart.pug
extends ../LAYOUT/layout.pug
block title
	-var page={slug:'cart',title:'Cart'};
	title Cart
block main
	.ove-main
		.container
			.ove-cart.row
				.col-6-m.ove-cart-tab.active
					span Доступны в магазине
						i 23
				.col-6-m.ove-cart-tab.disabled
					span Нет в наличии
						i 0
				+loop(4)
					.col-12-m.ove-cart__item
						.col-3-m.ove-cart__item_img 1
						.col-7-m.ove-cart__item_titlePrice
							h6 Смеситель для кухни GROHE BAU EDGE 31367000 высокий излив
							span.ove-cart__item_Price 14 000 Р
						.col-2-m.ove-cart__item_delete
							+I('close')