<!-- split header.html -->
header.ove-mainHeader
    .container
        .row
            .col-12-tl
                nav.ove-topNavigation
                    ul
                        li.ove-topNavigation__eshopMark
                            +A-ove-topNavLink('Интернет-магазин','/')
                        li
                            +A-ove-topNavLink('Vip Сантехника','/')
                        li
                            +A-ove-topNavLink('Наши магазины','/')
                        li
                            +A-ove-topNavLink('Сервисный центр','/')
                        li
                            +A-ove-topNavLink('Сток центр','/')
                        li
                            +A-ove-topNavLink('Оптовый отдел','/')
            section.ove-desctopControlPanel
                .col-5-d
                    .row
                        .col-6-d
                            .ove-logo
                                +logo-img('logo.svg','ove-logo')
                        .col-6-d.no-gutter-l
                            .ove-info info
                .col-4-d
                    .ove-personalDashboard dashboard
                .col-1-d
                    .ove-bookmarks bookmarks
                .col-2-d
                    .ove-cart cart
    .ove-subControlPanel__wrapper
        .container
            section.ove-subControlPanel.ove-subControlPanel--mobile
                .row
                    .col-2-m.col-2-tp
                        +hamburger()
                    .col-8-m.col-8-tp
                        +logo-img('logo.svg','ove-logo--mobile')
                    .col-2-m.col-2-tp button
            section.ove-subControlPanel.ove-subControlPanel--desktop