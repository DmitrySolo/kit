mixin MODULE-lightMenu(dataMenu)
	if dataMenu=='MainMenu'
		-var menuData = pages
	else
		-var menuData = menuData1
	nav.lightMenu(role='navigation' data-qcontent='true' data-qcname='module_Light_menu')
		ul.lightMenu__list
			each menuItem in menuData
				if dataMenu=='MainMenu'
					if menuItem.MainMenu
						li(class='lightMenu__item ' + menuItem.dop_class)
							a(href="" + menuItem.slug+".html")=menuItem.title
				else
					li(class='lightMenu__item ' + menuItem.dop_class)
						a(href="" + menuItem.href)=menuItem.title
mixin MODULE-hero_video()
	<!-- split modules/hero_video -->
	.hero_video
		.homepage-hero-module
			.video-container
				.filter
				video(autoplay loop class="fillWidth")
					source(src="Hello-World.mp4" type="video/mp4")
					|Your browser does not support the video tag. I suggest you upgrade your browser.
					source(src="Hello-World.webm" type="video/webm")
					|Your browser does not support the video tag. I suggest you upgrade your browser.
				+hero-title-center('The best of the Rest')
			.hero_video__poster.hidden
				img(src="Hello-World.jpg" alt="x")