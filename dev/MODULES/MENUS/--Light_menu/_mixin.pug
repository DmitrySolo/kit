mixin MODULE-lightMenu(dataMenu)
	if dataMenu=='MainMenu'
		-var menuData = pages
	else
		-var menuData = menuData1
	nav.lightMenu(role='navigation' data-qcontent='true' data-qcname='module_Light_menu')
		ul.lightMenu__list
			each menuItem in menuData
				if dataMenu=='MainMenu'
					if menuItem.MainMenu
						li(class='lightMenu__item ' + menuItem.dop_class)
							a(href="" + menuItem.slug+".html")=menuItem.title
				else
					li(class='lightMenu__item ' + menuItem.dop_class)
						a(href="" + menuItem.href)=menuItem.title