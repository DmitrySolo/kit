mixin catalogMenu()
	<!-- split modules/catalogMenu -->
	.catalogMenu
		a.catalogMenu__button Каталог товаров
		.catalogMenu__wrapper
			ul.catalogMenu__list.catalogMenu__list--L1
				li.catalogMenu__list__item.catalogMenu__list__item--active#catalogMenu__list__item--1--1
					span Сантехника
					span.angleR
						+I('right','icon--angle')
				li.catalogMenu__list__item#catalogMenu__list__item--1--2
					span Мебель для ванной
					span.angleR
						+I('right','icon--angle')
				li.catalogMenu__list__item#catalogMenu__list__item--1--3
					span Водоснабжение
					span.angleR
						+I('right','icon--angle')
				li.catalogMenu__list__item#catalogMenu__list__item--1--4
					span Строительная химия
					span.angleR
						+I('right','icon--angle')
				li.catalogMenu__list__item#catalogMenu__list__item--1--5
					span Люстры/Светильники
					span.angleR
						+I('right','icon--angle')
				li.catalogMenu__list__item#catalogMenu__list__item--1--6
					span Электрика
					span.angleR
						+I('right','icon--angle')
				li.catalogMenu__list__item#catalogMenu__list__item--1--7
					span Аксессуары
					span.angleR
						+I('right','icon--angle')
				li.catalogMenu__list__item#catalogMenu__list__item--1--8
					span Отопление
					span.angleR
						+I('right','icon--angle')
				li.catalogMenu__list__item#catalogMenu__list__item--1--9
					span Сток-товары
					span.angleR
						+I('right','icon--angle')
			-var i = 1
			-var ii = 1
			-var i3 = 1
			+loop(8)
				ul(id="catalogMenuLevel--2--"+i).catalogMenu__list.catalogMenu__list--L2
					-i++
					+loop(8)
						li(id='#catalogMenu__list__item--2--'+ii).catalogMenu__list__item
							span="Акриловые ванны "+i
							span.angleR
								+I('right','icon--angle')
						-ii++
			+loop(64)
				ul(id="catalogMenuLevel--3--"+i3).catalogMenu__list.catalogMenu__list--L3
					-i3++
					+loop(5)
						li.catalogMenu__list__item#catalogMenu__list__item--3--1
							span="Угловые симметричные " + i3


